{
    "name": "game-contracts",
    "version": "0.1.0",
    "description": "Solidity contracts for game.",
    "author": "Jan Smrza",
    "license": "MIT",
    "scripts": {
        "clean": "hardhat clean; rm -rf coverage coverage.json docs/docmd docs/docweb cache/ abi/ contract-sizes bin/; find nethereum -mindepth 1 ! -name 'README.md' -delete; find docs/uml -mindepth 1 ! -name 'README.md' -delete",
        "build-quick": "hardhat compile; hardhat codesize --skipcompile true",
        "build-check": "yarn clean; hardhat coverage; hardhat validateOutput",
        "build-full": "yarn clean; hardhat coverage; hardhat docgen --no-compile; hardhat dodoc --no-compile; hardhat size-contracts --no-compile; hardhat codesize --skipcompile true; hardhat export-abi --no-compile; hardhat validateOutput; yarn uml-class",
        "test-coverage": "npx hardhat coverage",
        "test-gas": "REPORT_GAS=true npx hardhat test",
        "storage-generate": "npx hardhat storage-layout --update",
        "storage-check": "npx hardhat storage-layout --check",
        "size-contracts": "npx hardhat size-contracts",
        "size-contracts-simple": "npx hardhat codesize",
        "docs-web": "npx hardhat docgen",
        "docs-md": "npx hardhat dodoc",
        "uml-class": "sol2uml class ./contracts --ignoreFilesOrFolders ./contracts/test --outputFormat png --outputFileName ./docs/uml/diagram",
        "lint:all": "yarn lint:format && yarn lint:sol && yarn lint:ts",
        "lint:format": "prettier --check **.{sol,js,ts}",
        "lint:sol": "solhint --config .solhint.json --ignore-path .solhintignore contracts/**/*.sol",
        "lint:ts": "eslint . --ext js,ts --max-warnings 0 --fix",
        "format:all": "prettier --write .",
        "format:sol": "prettier 'contracts/**/*.sol' -w",
        "format:ts": "prettier '**/*.ts' '**/*.js' '**/*.json' -w",
        "prepare": "husky install",
        "postinstall": "if ! npm list -g sol2uml >/dev/null 2>&1; then npm install -g sol2uml; else echo 'sol2uml is already installed globally'; fi"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.5.0",
        "@commitlint/config-conventional": "^17.4.4",
        "@ethersproject/abi": "^5.4.7",
        "@ethersproject/bytes": "^5.0.0",
        "@ethersproject/providers": "^5.4.7",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
        "@nomicfoundation/hardhat-toolbox": "^2.0.2",
        "@nomiclabs/hardhat-ethers": "^2.0.0",
        "@nomiclabs/hardhat-etherscan": "^3.0.0",
        "@nomiclabs/hardhat-solhint": "^3.0.0",
        "@openzeppelin/contracts": "^4.8.2",
        "@primitivefi/hardhat-dodoc": "^0.2.3",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.2.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.15.5",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "chai": "^4.2.0",
        "chalk": "4.x",
        "dotenv": "^16.0.3",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "ethers": "^5.4.7",
        "hardhat": "^2.13.0",
        "hardhat-abi-exporter": "^2.10.1",
        "hardhat-contract-sizer": "^2.8.0",
        "hardhat-deploy": "^0.11.25",
        "hardhat-docgen": "^1.3.0",
        "hardhat-gas-reporter": "^1.0.8",
        "hardhat-output-validator": "^0.1.19",
        "hardhat-storage-layout-changes": "^0.1.2",
        "hardhat-tracer": "^2.1.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.0",
        "prettier": "^2.8.7",
        "prettier-plugin-solidity": "^1.1.3",
        "solc": "^0.8.7",
        "solhint": "^3.4.1",
        "solidity-coverage": "^0.8.2",
        "squirrelly": "^8.0.8",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.0",
        "typescript": "^5.0.2"
    },
    "dependencies": {
        "solmate": "^6.2.0"
    }
}
